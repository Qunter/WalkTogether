<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xcskin="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.amap.api.maps2d.MapView
        android:id="@+id/main_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.walktogether.view.XCArcMenuView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xcskin:position="left_bottom"
        xcskin:radius="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/id_button"
            android:layout_width="@dimen/mIconSizeWidth"
            android:layout_height="@dimen/mIconSizeHeight"
            android:background="@drawable/menu_bg" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_plus" />
        </RelativeLayout>
        <com.walktogether.view.MenuItem
            android:layout_width="@dimen/mIconSizeWidth"
            android:layout_height="@dimen/mIconSizeHeight"
            android:tag="around"
            xcskin:text="周边"
            xcskin:image="@drawable/ic_plus" />
        <com.walktogether.view.MenuItem
            android:layout_width="@dimen/mIconSizeWidth"
            android:layout_height="@dimen/mIconSizeHeight"
            android:tag="friend"
            xcskin:text="好友"
            xcskin:image="@drawable/ic_plus" />
        <com.walktogether.view.MenuItem
            android:layout_width="@dimen/mIconSizeWidth"
            android:layout_height="@dimen/mIconSizeHeight"
            android:tag="setting"
            xcskin:text="设置"
            xcskin:image="@drawable/ic_plus" />

    </com.walktogether.view.XCArcMenuView>
</RelativeLayout>